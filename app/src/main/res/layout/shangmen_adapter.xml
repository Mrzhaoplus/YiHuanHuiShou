<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/line"
           android:padding="10dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginLeft="3dp"
               android:layout_marginRight="3dp"
               android:layout_marginTop="5dp"
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="张三"
           android:textSize="16sp"
           />
           <TextView
               android:layout_marginTop="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=":"
               android:textSize="16sp"
               />
           <TextView
               android:layout_marginTop="5dp"
               android:id="@+id/tel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="13522115430"
               android:textSize="16sp"
               />
       </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:id="@+id/line1"
        android:orientation="vertical"
        android:layout_below="@+id/line"
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/til_bianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_toRightOf="@+id/til_bianhao"
                android:id="@+id/bianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678940"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待上门"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/til_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="废品类别："
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_toRightOf="@+id/til_sort"
                android:id="@+id/sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="衣服"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/til_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="废品重量："
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:layout_toRightOf="@+id/til_weight"
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10kg"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/line1"
        android:id="@+id/shouhuo"
        android:background="@drawable/shape_qingdan"
        android:padding="3dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line1"
        android:id="@+id/quxiao"
        android:background="@drawable/shape_qingdan"
        android:layout_toLeftOf="@+id/shouhuo"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            />
    </LinearLayout>
</RelativeLayout>
