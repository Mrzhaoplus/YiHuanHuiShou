<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/driver_bg"
    tools:context="com.example.mr.yihuanhuishou.driver.ui.TixianManagerActivity">
    <include layout="@layout/item_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/ali_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:drawableLeft="@drawable/zhifubao_iv"
                android:gravity="center"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/ali_isbind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已绑定"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/jiantou_iv"
                android:drawablePadding="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/driver_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <RelativeLayout
            android:id="@+id/wechat_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:drawableLeft="@drawable/weixin_iv"
                android:gravity="center"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/wechat_isbind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定"
                android:textSize="16sp"
                android:textColor="@color/red1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/jiantou_iv"
                android:drawablePadding="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/driver_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <RelativeLayout
            android:id="@+id/bank_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bank_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhongguo_bank_iv"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"/>
            <TextView
                android:id="@+id/bank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国银行"
                android:textColor="@color/textColor"
                android:layout_toRightOf="@+id/bank_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/bank_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1332 2343 **** 5432"
                android:layout_below="@+id/bank_tv"
                android:layout_toRightOf="@+id/bank_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/bind_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定银行卡"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_green_button"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"/>
</LinearLayout>
