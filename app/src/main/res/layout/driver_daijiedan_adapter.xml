<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
     <RelativeLayout
         android:padding="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
         <TextView
             android:id="@+id/til_bh"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="订单编号:"
             android:textColor="@color/black"
             android:textSize="16sp"
             />
         <TextView
             android:layout_marginLeft="5dp"
             android:id="@+id/jie_bh"
             android:layout_toRightOf="@+id/til_bh"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="12345678910"
             android:textSize="16sp"
             />
          <TextView
              android:id="@+id/jie_state"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="待接单"
              android:layout_alignParentRight="true"
              android:textSize="16sp"
              android:textColor="@color/red"
              />
     </RelativeLayout>
    <LinearLayout
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="废品类别:"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/jie_lx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="衣服"
        android:textSize="16sp"
        />
</LinearLayout>
    <RelativeLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/til_zl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="废品重量:"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <TextView
            android:layout_toRightOf="@+id/til_zl"
            android:layout_marginLeft="5dp"
            android:id="@+id/jie_zl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10Kg"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huise"
        />
       <RelativeLayout
           android:id="@+id/clo_bill"
           android:visibility="visible"
           android:padding="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/jie_qx"
               android:layout_alignParentRight="true"
               android:background="@drawable/shape_qingdan"
               android:layout_toLeftOf="@+id/shouhuo"
               android:padding="3dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="取消订单"
                   android:textColor="@color/colorAccent"
                   android:textSize="16sp"
                   />
           </LinearLayout>

       </RelativeLayout>
</LinearLayout>
