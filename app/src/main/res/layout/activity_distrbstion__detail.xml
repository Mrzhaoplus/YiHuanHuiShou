<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/huise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mr.yihuanhuishou.activity.Distrbstion_DetailActivity">
    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        >
        <ImageView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_xxxhdpi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/beak"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取货详情"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relat"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rela1"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tile_bian"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    />
                <TextView
                    android:id="@+id/dis_bh"
                    android:layout_toRightOf="@+id/tile_bian"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/dis_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送中"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_below="@+id/tile_bian"
                    android:layout_marginTop="15dp"
                    android:id="@+id/xian"
                    />


                <LinearLayout
                    android:layout_below="@+id/xian"
                    android:layout_marginTop="10dp"
                    android:id="@+id/line2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="废品类型："
                        />
                    <TextView
                        android:id="@+id/dis_lx"
                        android:layout_toRightOf="@+id/tile_bian"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/line2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/line3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="废品重量："
                        />
                    <TextView
                        android:id="@+id/dis_zl"
                        android:layout_toRightOf="@+id/tile_bian"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/line3"
                    android:layout_marginTop="10dp"
                    android:id="@+id/line8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="废品总价："
                        />
                    <TextView
                        android:id="@+id/dis_zj"
                        android:layout_toRightOf="@+id/tile_bian"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/orange"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela1"
                android:layout_marginTop="1dp"
                android:id="@+id/rela3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dis_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/dis_tel"
                    android:layout_toRightOf="@+id/dis_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/dis_dizhi"
                    android:layout_below="@+id/dis_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela3"
                android:layout_marginTop="1dp"
                android:id="@+id/rela5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/til_qu_tim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取货时间："
                    />
                <TextView
                    android:id="@+id/dis_qu_time"
                    android:layout_toRightOf="@+id/til_qu_tim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela5"
                android:layout_marginTop="1dp"
                android:id="@+id/rela2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/til_tim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
                    />
                <TextView
                    android:id="@+id/dis_time"
                    android:layout_toRightOf="@+id/til_tim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/til_jie_tim"
                    android:layout_below="@+id/til_tim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单时间："
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/dis_jie_time"
                    android:layout_below="@+id/dis_time"
                    android:layout_toRightOf="@+id/til_jie_tim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/til_quhuo_time"
                    android:layout_below="@+id/til_jie_tim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取货时间："
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/dis_qu_time2"
                    android:layout_below="@+id/dis_jie_time"
                    android:layout_toRightOf="@+id/til_quhuo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela2"
                android:layout_marginTop="1dp"
                android:id="@+id/rela4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/til_haoma"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号码："
                    />
                <TextView
                    android:id="@+id/dis_Lpnum"
                    android:layout_toRightOf="@+id/til_haoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_below="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.amap.api.maps2d.MapView>
</RelativeLayout>
