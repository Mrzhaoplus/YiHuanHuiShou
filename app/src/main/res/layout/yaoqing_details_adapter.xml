<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
     <TextView
         android:id="@+id/time"
         android:padding="5dp"
         android:textSize="16sp"
         android:gravity="center"
         android:layout_width="match_parent"
         android:background="@color/hui"
         android:text="2018-10-10  15:30:20"
         android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="askdjaklsdjaklsdjaosdjxzxcxcxcxcxcxcxcxcxcxcxcxcxcxcxcxkcjzklcjkladj"
            android:textSize="16sp"
            android:padding="10dp"
            />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui"
        />
    <RelativeLayout

        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/tongyi"
            android:layout_margin="10dp"
            android:background="@drawable/shape_qingdan"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意加入"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/quxiao"
            android:background="@drawable/shape_msg"
            android:layout_toLeftOf="@+id/tongyi"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝加入"
                android:textColor="#d76038"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/jiaru"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已加入"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>

</LinearLayout>
