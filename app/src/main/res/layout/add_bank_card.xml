<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="15dp"
        android:id="@+id/bank_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/bank_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/zhongguo_bank_iv"
            />
        <TextView
            android:id="@+id/bank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国银行"
            android:textColor="@color/textColor"
            android:layout_toRightOf="@+id/bank_iv"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/bank_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1332 2343 **** 5432"
            android:layout_below="@+id/bank_tv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bank_iv"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>
</LinearLayout>
