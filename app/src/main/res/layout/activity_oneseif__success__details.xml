<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.mr.yihuanhuishou.activity.Oneseif_Success_DetailsActivity">
    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_xxxhdpi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/beak"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_above="@+id/cancle_bill"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rela1"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tile_bian"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    />
                <TextView
                    android:id="@+id/pay_bh"
                    android:layout_toRightOf="@+id/tile_bian"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    />

                <TextView
                    android:id="@+id/pay_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_below="@+id/tile_bian"
                    android:layout_marginTop="15dp"
                    android:id="@+id/xian"
                    />


                <LinearLayout
                    android:layout_below="@+id/xian"
                    android:layout_marginTop="10dp"
                    android:id="@+id/line2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="废品类型："
                        />
                    <TextView
                        android:id="@+id/pay_lx"
                        android:layout_toRightOf="@+id/tile_bian"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="衣物"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/line2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/line3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="废品重量："
                        />
                    <TextView
                        android:id="@+id/pay_zl"
                        android:layout_toRightOf="@+id/tile_bian"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15Kg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/line3"
                    android:layout_marginTop="10dp"
                    android:id="@+id/line8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="废品总价："
                        />
                    <TextView
                        android:id="@+id/pay_zj"
                        android:layout_toRightOf="@+id/tile_bian"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/orange"
                        android:layout_height="wrap_content"
                        android:text="1000元"
                        />
                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_below="@+id/line8"
                    android:layout_marginTop="15dp"
                    android:id="@+id/xian1"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela1"
                android:layout_marginTop="1dp"
                android:id="@+id/rela2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/til_tim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
                    />
                <TextView
                    android:id="@+id/pay_time"
                    android:layout_toRightOf="@+id/til_tim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="2017.11.30"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/til_zhi_time"
                    android:layout_below="@+id/til_tim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指派时间："
                    />
                <TextView
                    android:id="@+id/pay_zhi_time"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/pay_time"
                    android:layout_toRightOf="@+id/til_zhi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="2017.11.30"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/til_fu_time"
                    android:layout_below="@+id/til_zhi_time"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款时间："
                    />
                <TextView
                    android:id="@+id/pay_fu_time"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/pay_zhi_time"
                    android:layout_toRightOf="@+id/til_fu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="2017.11.30"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_below="@+id/til_fu_time"
                    android:layout_marginTop="15dp"
                    android:id="@+id/xian2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela2"
                android:layout_marginTop="1dp"
                android:id="@+id/rela4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/til_firm"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指派公司："
                    />
                <TextView
                    android:id="@+id/pay_firm"
                    android:layout_toRightOf="@+id/til_firm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="北京某某某有限责任公司"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_below="@+id/pay_firm"
                    android:layout_marginTop="15dp"
                    android:id="@+id/xian3"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/rela4"
                android:layout_marginTop="1dp"
                android:id="@+id/rela7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/til_price"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待支付金额："
                    />
                <TextView
                    android:id="@+id/pay_price"
                    android:layout_toRightOf="@+id/til_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:text="100.0元"
                    />
                <TextView
                    android:id="@+id/til_fu_price"
                    android:layout_below="@+id/til_price"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付金额："
                    />
                <TextView
                    android:id="@+id/pay_fu_price"
                    android:layout_below="@+id/pay_price"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/til_fu_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:text="100.0元"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_below="@+id/til_fu_price"
                    android:layout_marginTop="15dp"
                    android:id="@+id/xian4"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
