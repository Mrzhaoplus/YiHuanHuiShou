<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/driver_bg"
    tools:context="com.example.mr.yihuanhuishou.activity.PostDemandActivity">
    <include layout="@layout/item_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送类型："
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <RadioGroup
            android:id="@+id/pslx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/peisong_left_rbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/fanxuan"
                android:checked="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="司机取货"
                android:textSize="16sp"
                android:paddingLeft="10dp"/>
            <RadioButton
                android:id="@+id/peisong_right_rbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/fanxuan"
                android:checked="false"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自己配送"
                android:textSize="16sp"
                android:paddingLeft="10dp"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包装条码："
            android:textColor="@color/textColor"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/saoma_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/saoma_iv"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:visibility="gone"
            android:textSize="16sp"
            android:id="@+id/tiao_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111111111111"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:id="@+id/leixing_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">
        <TextView
            android:id="@+id/view_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择类型："
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/leixing_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择您的类型"
            android:textColor="@color/textColorgray"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/view_01"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/jiantou_iv"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/view_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="废品数量："
            android:textColor="@color/textColor"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:id="@+id/view_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/shuliang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="15dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiantou_xia_iv"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/shuliang_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toLeftOf="@+id/view_02"
            android:layout_toRightOf="@+id/view_03"
            android:layout_centerVertical="true"
            android:hint="请选择您的废品数量"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/view_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="废品总价："
            android:textColor="@color/textColor"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/view_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/zongjia_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="请选择您的废品总价"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/view_04"
            android:layout_toLeftOf="@+id/view_05"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:id="@+id/shijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取货时间："
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/quhuo_left_rbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/fanxuan"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间"
                android:textSize="16sp"
                android:paddingLeft="10dp"/>
            <RadioButton
                android:id="@+id/quhuo_right_rbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/fanxuan"
                android:checked="false"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即上门"
                android:textSize="16sp"
                android:paddingLeft="10dp"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/driver_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:id="@+id/qhdz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取货地址："
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="您还可以选用"
            android:textSize="16sp"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用地址"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:autoLink="all"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/add_lin"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:hint="请输入输入地址"
            android:textColor="@color/textColorgray"/>
    </LinearLayout>

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.amap.api.maps2d.MapView>
</LinearLayout>
