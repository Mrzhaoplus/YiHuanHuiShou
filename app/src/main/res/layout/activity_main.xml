<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mr.yihuanhuishou.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/ding"
        android:gravity="center"
        android:background="@color/colorAccent"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择类型"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ding"
        android:id="@+id/huishou"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/huishou_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/huishou_xxxhdpi"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是回收人员"
               android:textSize="18sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/huishou"
        android:id="@+id/siji"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/siji_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/siji_xxxhdpi"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是司机"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
</RelativeLayout>
