<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:id="@+id/click_rl">
     <ImageView
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"
         android:id="@+id/touxiang"
         android:layout_width="55dp"
         android:layout_height="55dp"
         android:src="@drawable/test_face_iv"
         />
       <TextView

           android:id="@+id/jname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="居民姓名"
           android:layout_toRightOf="@+id/touxiang"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="10dp"
           android:textSize="14sp"
           android:textColor="@color/black"
           />
     <ImageView
         android:visibility="visible"
         android:id="@+id/dian"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/dian_xxxhdpi"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:layout_centerVertical="true"
         />
      <TextView
          android:id="@+id/neirong"
          android:textSize="14sp"
          android:singleLine="true"
          android:ellipsize="end"
          android:layout_toLeftOf="@+id/dian"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="居民发送的内容消息展示，居民发送..."
          android:layout_toRightOf="@+id/touxiang"
          android:layout_below="@+id/jname"
          android:layout_marginLeft="10dp"
          />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back_color"
        android:layout_below="@+id/touxiang"
        />
</RelativeLayout>
